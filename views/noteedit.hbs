<form action="/notes/save" method="post">
    <div class="container-fluid">
        <div class="form-group row align-items-center">
            <input type='hidden' name='docreate' value='<%= 
                  docreate ? "create" : "update"%>'> 
            <label for="notekey" class="col-form-label">Key</label>
            {{#if docreate }}
                <input class="form-control" type="text" 
                name="notekey" value="">
            {{else}} 
                
                {{#if note }}{{notekey}}{{/if}}
                <input type="hidden" name="notekey"
                    value="{{#if note}}{{notekey}}{{/if}}">
            {{/if}}
        
            <label class="col-form-label" for="title">Title</label>
            <input class="form-control" type="text" name="title"
                value="{{#if note}}{{note.title}}{{/if}}">
                
            <textarea class="form-control mt-3" rows="4" name="body">
                {{#if note}}{{note.body}}{{/if}}
            </textarea><br>
            <input class="btn btn-secondary" type="submit" value="Submit">            
        </div>
    </div>
</form>